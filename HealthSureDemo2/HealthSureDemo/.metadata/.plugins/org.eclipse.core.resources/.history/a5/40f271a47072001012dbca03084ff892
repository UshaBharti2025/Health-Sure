   <!-- SCRIPT FOR Date range with calendar input-->
   <script>
    window.addEventListener('load', function () {
        const fromDate = document.getElementById("fromDate");
        const toDate = document.getElementById("toDate");
        const today = new Date().toISOString().split("T")[0]; // today's date in yyyy-mm-dd

        if (fromDate) {
            fromDate.setAttribute("type", "date"); // enable calendar
            fromDate.setAttribute("max", today);   // optional: restrict to today or earlier
        }

        if (toDate) {
            toDate.setAttribute("type", "date");   // enable calendar
            toDate.setAttribute("max", today);     // optional: restrict to today or earlier
        }
    }
 // Call once on full page load
    window.addEventListener('load', enableCalendar);

    );
</script>
   
  
